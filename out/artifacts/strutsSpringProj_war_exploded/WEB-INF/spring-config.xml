<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="jdbc:mysql://localhost:3306/twitdatabase"></property>
        <property name="username" value="root"></property>
        <property name="password" value="desu123"></property>
        <property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
     <bean id="tweetDao" class="com.koushik.javabrains.dao.impl.TweetDaoImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="tweetService" class = "com.koushik.javabrains.service.impl.TweetServiceImpl">
        <property name="tweetDao" ref="tweetDao"/>
    </bean>

    <!--<bean id="employee" class="com.koushik.javabrains.Employee">
        <property name="employeeId" value="317960"/>
        <property name="employeeName" value="chaitanya"/>
    </bean>-->
    <bean id="tweetController" class="com.koushik.javabrains.action.TweetController">
        <property name="tweetService" ref="tweetService"/>
    </bean>

