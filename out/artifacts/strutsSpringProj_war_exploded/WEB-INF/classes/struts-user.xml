<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.action.extension" value=""/>
    <constant name="struts.objectFactory" value="org.apache.struts2.spring.StrutsSpringObjectFactory" />
    <!--<package name="default" namespace="/" extends="struts-default">

&lt;!&ndash;		<action name="debugTagAction"
			class="com.koushik.javabrains.action.DebugTagAction >
			<result name="success">pages/debug.jsp</result>
		</action>&ndash;&gt;

	</package>-->
    <package name="struts2User" namespace="/user" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>

         <interceptors>
            <interceptor name="redirectMessage"
                         class="my.struts.interceptor.RedirectMessageInterceptor" />
            <interceptor-stack name="myStack">
                <interceptor-ref name="redirectMessage" />
                <interceptor-ref name="paramsPrepareParamsStack" />
            </interceptor-stack>
         </interceptors>
         <default-interceptor-ref name="myStack" />

        <action name="index" class="com.koushik.javabrains.action.UserController" method="index">
            <!--<result name="success">/user/index.jsp</result>-->
            <result name="success" type="tiles">/user_index.tiles</result>
        </action>

        <action name="create">
            <!--<result>/user/create.jsp</result>-->
            <result type="tiles">/user_create.tiles</result>
        </action>

         <action name="insert" class="com.koushik.javabrains.action.UserController" method="insert">
             <result name="success" type="redirectAction">index</result>
             <!--<result name="input">/user/create.jsp</result>-->
             <result name="input" type="redirectAction">create</result>
        </action>

        <action name="update">
            <result type="tiles">/user_update.tiles</result>
        </action>

        <action name="processUpdate" class="com.koushik.javabrains.action.UserController" method="update">
            <result name="success" type="redirectAction">index</result>
            <!--<result name="input" >/user/update.jsp</result>-->
            <result name="input" type="redirectAction">update</result>
        </action>

        <action name="delete" class="com.koushik.javabrains.action.UserController" method="delete" >
            <result name="success" type="redirectAction">index</result>
            <!--<result name="success" type="redirectAction">index</result>-->
        </action>
     </package>

</struts>